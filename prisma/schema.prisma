generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      String   @default("admin")
  createdAt DateTime @default(now())
}

model Lead {
  id            String   @id @default(cuid())
  name          String
  email         String?
  phone         String
  moveDateStart DateTime?
  moveDateEnd   DateTime?
  origin        String
  destination   String
  bedrooms      Int?
  notes         String?
  source        String?
  status        String    @default("new")
  createdAt     DateTime  @default(now())
  jobs          Job[]
  notesRel      Note[]
}

model Job {
  id           String   @id @default(cuid())
  leadId       String
  lead         Lead     @relation(fields: [leadId], references: [id])
  quotedHours  Float?
  hourlyRate   Int?
  depositCents Int?
  startAt      DateTime?
  endAt        DateTime?
  crewId       String?
  truckId      String?
  status       String    @default("scheduled")
  createdAt    DateTime  @default(now())
  notesRel     Note[]
}

model Crew {
  id       String  @id @default(cuid())
  name     String
  members  String?
  active   Boolean @default(true)
}

model Vehicle {
  id       String  @id @default(cuid())
  type     String
  plate    String?
  active   Boolean @default(true)
}

model Note {
  id       String   @id @default(cuid())
  body     String
  leadId   String?
  jobId    String?
  lead     Lead?    @relation(fields: [leadId], references: [id])
  job      Job?     @relation(fields: [jobId], references: [id])
  createdAt DateTime @default(now())
}

model Order {
  id        String   @id @default(cuid())
  customer  String
  email     String?
  phone     String?
  itemsJson String
  provider  String
  status    String     @default("created")
  createdAt DateTime   @default(now())
}